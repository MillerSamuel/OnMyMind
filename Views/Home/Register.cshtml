@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css">

</head>
@model User

<body>
    <div class="text-center">
        <h1 class="brand">OnMyMind</h1>
        <div class="divider"></div>
        <div class="login-box">
            <h1 class="m-0 p-3">Register</h1>
            <div class="container">
                <form action="/CreateAccount" method="post">
                    <div class="form-group">
                        <label for="FirstName">First Name:</label>
                        <input class="form-control" asp-for="FirstName">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name:</label>
                        <input class="form-control" asp-for="LastName">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input class="form-control" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input class="form-control" asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label for="PassConfirm">Confirm Password:</label>
                        <input class="form-control" asp-for="PassConfirm">
                        <span class="text-danger" asp-validation-for="PassConfirm"></span>
                    </div>
                    <input class="m-2 btn" type="submit" value="Register">
                </form>
            <p class="divider2">or</p>
            <a href="/"><button class="btn register">Sign In Now</button></a>
            </div>
        </div>
    </div>
</body>

</html>